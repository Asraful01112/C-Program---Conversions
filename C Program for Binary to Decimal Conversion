#include <stdio.h>
#include <math.h>

int main() {
    long long binary;
    int decimal = 0, i = 0, remainder;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    long long temp = binary;

    while (temp != 0) {
        remainder = temp % 10;
        if (remainder > 1) {
            printf("Invalid binary number!\n");
            return 1;
        }
        decimal += remainder * (1 << i); 
        temp /= 10;
        i++;
    }

    printf("Decimal equivalent of %lld is: %d\n", binary, decimal);

    return 0;
}
